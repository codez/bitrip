index = params[:index].to_i

if index > 0
  page.hide "navi_#{index - 1}_type"
end 

page.insert_html :bottom, :navis, :partial => 'navi',
                 :locals => { :navi => @navi_action, :index => params[:index] }
 
page.replace :add_navi_link, :partial => 'add_link', :locals => { :index => (index + 1) }

page.replace :remove_navi_link, :partial => 'remove_link', :locals => { :index => index }
                    
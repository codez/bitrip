
<table>
<% 
count = 0 
navi.form_fields.each do |field| 
  fields_for("fields[#{index}][#{count}]", field) do |f| 
-%>
<tr>
	<td>
	<%= field.name %> 
	<%= f.hidden_field :name %>
	<%= f.hidden_field :type %>
	</td>
	<% # TODO: appropriate control for field.type -%>
	<td><%= f.text_field :value, :size => '30' %> </td>
	<td><%= f.check_box :constant  %> const</td>
</tr>    
<% 
  end 
  count += 1 
end
-%>
</table>

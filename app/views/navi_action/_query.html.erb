<% subrip_index ||= nil %>
<% if not query.form_fields.empty? -%>
	<% if subrip_index || query.rip.navi_actions.select{ |navi| navi.type == :form }.size > 1 -%>
	<tr>
		<td colspan="2">Form #<%= "#{subrip_index}-" if subrip_index %><%= query.position %>:</td>
	</tr>
	<% end -%>
	<%= render :partial => 'form_field/query', 
			   :collection => query.form_fields,
			   :locals => { :subrip_index => subrip_index } %>
<% end -%>
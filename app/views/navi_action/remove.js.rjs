index = params[:index].to_i

if index > 0
  page.show "navi[#{index - 1}][type]"
end 

page["navi_#{index}"].remove 

page.replace :add_navi_link, :partial => 'add_link', :locals => { :index => (index - 1) }

page.replace :remove_navi_link, :partial => 'remove_link', :locals => { :index => (index - 1) }
  
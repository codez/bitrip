page.insert_html :bottom, :bits, :partial => 'bit',
                 :locals => { :bit => @bit, :index => params[:index] }
 
page.replace :add_bit_link, :partial => 'add_bit_link', :locals => { :index => (params[:index].to_i + 1) }

page.sortable("bits", 
            :onUpdate => 'function(){$("bit_order").value = Sortable.sequence("bits");}', 
            :tag => 'li', 
            :constraint => :vertical)
                    
page  << "$('bit_order').value += ',#{params[:index]}';"
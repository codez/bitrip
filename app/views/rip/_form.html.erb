<% form_tag action do -%>

<div id="ripform">
	<table>
	<%= render :partial => 'mainrip', :locals => {:start_page => @rip.main_navi?} %>
<% if not @rip.multi? %>
	<tr>
	  <td>Next Link </td>
	  <td>
	  	<%= text_field 'rip', 'next_link', :size => '30' %>
	  	<%= text_field 'rip', 'next_pages', :size => '2' %>
		# pages
	  </td>
	  <td><%= t 'rip_next_link' %></td>
	</tr>
<% end -%>	
	</table>
	
<% if @rip.main_navi? %>	
	<%= render :partial => 'navigation',  :locals => {:subrip_index => nil} %>
<% end -%>

<% if @rip.multi? %>
	<div id="subrips">
	<%= render :partial => 'subrip', 
			   :collection => @rip.children, 
	   	       :locals => {:start_page => !@rip.main_navi?} %>
	</div>
<% else -%>	
	<%= render :partial => 'bits', :locals => {:subrip_index => nil} %>
<% end -%>	
	
</div>

<%= render :partial => 'right', :locals => {:action => action} %>

<% end  # form -%>

<%= render :partial => 'submit_js' %>
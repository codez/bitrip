<% fields_for "bits[#{bitfields_counter}]", bitfields do |f| %>
<table id="bit_<%= bitfields_counter %>">
  <tr>
  	<td>Label: </td>
	<td><%= f.text_field :label, :size => '25' %></td>
  </tr>
  <tr>
  	<td>XPath: </td>
	<td><%= f.text_field :xpath, :size => '50' %></td>
  </tr>
  <tr>
  	<td>Generalize: </td>
	<td><%= f.check_box :generalize %></td>
  </tr>
  <tr>
  	<td colspan="2">
	<%= link_to_remote 'remove', :url => { :action => 'remove_bit', :index => bitfields_counter } %>
    <br/>
	</td>
  </tr>
</table>
<% end %>